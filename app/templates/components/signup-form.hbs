<div class="container container-fluid register-div col-xs-10 col-offset-1">
  <form class="form-horizontal"{{action "submit" on="submit"}}>

    <div class="form-group">
      <div class="row col-xs-6 text-right">
        <label for="name">Name</label>
      </div>
      <div class="col-xs-3">
        {{input value=customer.name placeholder="enter name"}}
      </div>
    </div>

    <div class="form-group">
      <div class="row col-xs-6 text-right">
        <label for="email">Email</label>
      </div>
      <div class="col-xs-3">
        {{input value=customer.email placeholder="enter email"}}
      </div>
    </div>

    <div class="form-group">
      <div class="row col-xs-6 text-right">
        <label for="password">Password</label>
      </div>
      <div class="col-xs-3">
        {{input value=customer.password type="password" placeholder="enter password"}}
      </div>
    </div>

    <div class="form-group">
      <div class="row col-xs-6 text-right">
        <label for="passwordConfirmation">Password Confirmation</label>
      </div>
      <div class="col-xs-3 col-offset-1">
        {{input value=customer.passwordConfirmation type="password" placeholder="enter password again"}}
      </div>
    </div>

    <div class="form-group col-xs-7 pull-right">
      <button class="btn btn-lg btn-default col-offset-2" type="submit">Sign Up!</button>
    </div>

  </form>

  <div class="col-xs-6 signup-link">
      <strong>Already a member? {{link-to "Log in" "login"}}</strong>
  </div>

</div>

{{#if errorMessage}}
  {{errorMessage}}
{{/if}}



{{yield}}
